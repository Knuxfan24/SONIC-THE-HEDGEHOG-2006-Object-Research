<?xml version="1.0" encoding="utf-8"?>
<Template>
  <type type="integer" default="1" description="1 - Compact
2 - Sedan
3 - Wagon" />
  
  <pathname type="string" default="" description="Name of the spline in a PATH file for the object to follow." />
  <brainname type="string" default="NpcCarBot" description="The AI setup the car should use." />
  <downfilename type="string" default="" description="Unknown." />
  <color type="integer" default="0" description="Shade of the car colour." />
  <hp type="integer" default="0" description="Health of the car." />
  <DrawDistance type="float" default="0" description="How close the object needs to be to the player before spawning." />
  <ObjName type="string" default="" description="The internal name of the object." />
  <StartInactive type="bool" default="false" description="Whether the object starts inactive." />

  <Extra type="model" name="twn/twn_obj_carCompact.model" condition="type == 1" />
  <Extra type="model" name="twn/twn_obj_carSedan.model" condition="type == 2" />
  <Extra type="model" name="twn/twn_obj_carWagon.model" condition="type == 3" />
  <Extra type="description" name="A car... Beep-beep!" />
</Template>